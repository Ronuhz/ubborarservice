{
  "$schema": "https://json-schema.org/draft/2020-12/schema",
  "$id": "https://example.com/schemas/rooms.schema.json",
  "title": "Room Legend",
  "type": "object",
  "required": ["rooms"],
  "properties": {
    "rooms": {
      "type": "array",
      "items": {
        "type": "object",
        "required": ["code", "address"],
        "properties": {
          "code": {
            "type": "string",
            "minLength": 1
          },
          "address": {
            "type": "string"
          }
        },
        "additionalProperties": false
      }
    }
  },
  "additionalProperties": false
}
