{
  "$schema": "https://json-schema.org/draft/2020-12/schema",
  "$id": "https://example.com/schemas/timetable.schema.json",
  "title": "Timetable Group Payload",
  "type": "object",
  "required": [
    "version",
    "generatedAt",
    "academicYear",
    "programId",
    "year",
    "group",
    "lastUpdatedAtSource",
    "days"
  ],
  "properties": {
    "version": {
      "type": "integer",
      "minimum": 1
    },
    "generatedAt": {
      "type": "string",
      "format": "date-time"
    },
    "academicYear": {
      "type": "string",
      "pattern": "^[0-9]{4}-[0-9]{4}$"
    },
    "programId": {
      "type": "string",
      "minLength": 1
    },
    "year": {
      "type": "integer",
      "minimum": 1
    },
    "group": {
      "type": "integer",
      "minimum": 1
    },
    "lastUpdatedAtSource": {
      "type": ["string", "null"],
      "format": "date"
    },
    "days": {
      "type": "array",
      "items": {
        "type": "object",
        "required": ["day", "entries"],
        "properties": {
          "day": {
            "type": "string",
            "enum": ["monday", "tuesday", "wednesday", "thursday", "friday"]
          },
          "entries": {
            "type": "array",
            "items": {
              "type": "object",
              "required": ["time", "frequency", "course", "type", "room", "instructor"],
              "properties": {
                "time": {
                  "type": "string",
                  "minLength": 1
                },
                "frequency": {
                  "type": "string",
                  "enum": ["weekly", "week1", "week2"]
                },
                "course": {
                  "type": "string",
                  "minLength": 1
                },
                "type": {
                  "type": "string",
                  "enum": ["lecture", "seminar", "lab"]
                },
                "room": {
                  "type": "string"
                },
                "roomAddress": {
                  "type": "string"
                },
                "instructor": {
                  "type": "string"
                }
              },
              "additionalProperties": false
            }
          }
        },
        "additionalProperties": false
      }
    }
  },
  "additionalProperties": false
}
