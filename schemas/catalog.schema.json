{
  "$schema": "https://json-schema.org/draft/2020-12/schema",
  "$id": "https://example.com/schemas/catalog.schema.json",
  "title": "Timetable Catalog",
  "type": "object",
  "required": ["version", "generatedAt", "academicYears", "programs"],
  "properties": {
    "version": {
      "type": "integer",
      "minimum": 1
    },
    "generatedAt": {
      "type": "string",
      "format": "date-time"
    },
    "academicYears": {
      "type": "array",
      "items": {
        "type": "string",
        "pattern": "^[0-9]{4}-[0-9]{4}$"
      },
      "uniqueItems": true
    },
    "programs": {
      "type": "array",
      "items": {
        "type": "object",
        "required": ["id", "title", "years"],
        "properties": {
          "id": {
            "type": "string",
            "minLength": 1
          },
          "title": {
            "type": "string",
            "minLength": 1
          },
          "years": {
            "type": "array",
            "items": {
              "type": "object",
              "required": ["year", "groups"],
              "properties": {
                "year": {
                  "type": "integer",
                  "minimum": 1
                },
                "groups": {
                  "type": "array",
                  "items": {
                    "type": "integer",
                    "minimum": 1
                  },
                  "uniqueItems": true
                }
              },
              "additionalProperties": false
            }
          }
        },
        "additionalProperties": false
      }
    }
  },
  "additionalProperties": false
}
