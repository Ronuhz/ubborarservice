{
  "$schema": "https://json-schema.org/draft/2020-12/schema",
  "$id": "https://example.com/schemas/discounts.schema.json",
  "title": "Discount Offers",
  "type": "object",
  "required": ["version", "generatedAt", "items"],
  "properties": {
    "version": {
      "type": "integer",
      "minimum": 1
    },
    "generatedAt": {
      "type": "string",
      "format": "date-time"
    },
    "items": {
      "type": "array",
      "items": {
        "type": "object",
        "required": [
          "id",
          "title",
          "subtitle",
          "badge",
          "url",
          "symbolName",
          "topColor",
          "bottomColor",
          "accentColor"
        ],
        "properties": {
          "id": {
            "type": "string",
            "minLength": 1
          },
          "title": {
            "type": "string",
            "minLength": 1
          },
          "subtitle": {
            "type": "string",
            "minLength": 1
          },
          "badge": {
            "type": "string",
            "minLength": 1
          },
          "url": {
            "type": "string",
            "format": "uri"
          },
          "symbolName": {
            "type": "string",
            "minLength": 1
          },
          "topColor": {
            "$ref": "#/$defs/color"
          },
          "bottomColor": {
            "$ref": "#/$defs/color"
          },
          "accentColor": {
            "$ref": "#/$defs/color"
          }
        },
        "additionalProperties": false
      }
    }
  },
  "$defs": {
    "color": {
      "type": "object",
      "required": ["red", "green", "blue"],
      "properties": {
        "red": {
          "type": "number",
          "minimum": 0,
          "maximum": 1
        },
        "green": {
          "type": "number",
          "minimum": 0,
          "maximum": 1
        },
        "blue": {
          "type": "number",
          "minimum": 0,
          "maximum": 1
        }
      },
      "additionalProperties": false
    }
  },
  "additionalProperties": false
}
